---
layout: null
permalink: /api/series.json
---
{%- assign series_guides = site.guides | where_exp: "guide", "guide.series" -%}
{%- assign series_list = series_guides | group_by: "series.name" -%}
{
  "meta": {
    "generated": "{{ site.time | date_to_xmlschema }}",
    "count": {{ series_list.size }},
    "version": "1.0"
  },
  "series": [
    {%- for series in series_list -%}
    {
      "name": "{{ series.name }}",
      "slug": "{{ series.name | slugify }}",
      "total_parts": {{ series.items.first.series.total }},
      "completed_parts": {{ series.items.size }},
      "guides": [
        {%- assign sorted_guides = series.items | sort: "series.part" -%}
        {%- for guide in sorted_guides -%}
        {
          "part": {{ guide.series.part }},
          "title": {{ guide.title | jsonify }},
          "slug": "{{ guide.url | replace: '/guides/', '' | replace: '/', '' }}",
          "url": "{{ site.url }}{{ guide.url }}",
          "difficulty": "{{ guide.difficulty }}",
          "estimated_time": "{{ guide.estimated_time }}",
          "tags": {{ guide.tags | jsonify }}
        }{%- unless forloop.last -%},{%- endunless -%}
        {%- endfor -%}
      ]
    }{%- unless forloop.last -%},{%- endunless -%}
    {%- endfor -%}
  ]
}
