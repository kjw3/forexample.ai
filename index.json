---
layout: null
permalink: /index.json
---
{
  "site": {
    "name": "{{ site.title }}",
    "description": "{{ site.description }}",
    "url": "{{ site.url }}"
  },
  "meta": {
    "generated": "{{ site.time | date_to_xmlschema }}",
    "version": "1.0"
  },
  "statistics": {
    "total_guides": {{ site.guides.size }},
    {%- assign series_guides = site.guides | where_exp: "guide", "guide.series" -%}
    {%- assign series_list = series_guides | group_by: "series.name" -%}
    "total_series": {{ series_list.size }},
    {%- assign all_tags = site.guides | map: "tags" | join: "," | split: "," | uniq -%}
    "total_topics": {{ all_tags.size }},
    {%- assign beginner = site.guides | where: "difficulty", "beginner" -%}
    {%- assign intermediate = site.guides | where: "difficulty", "intermediate" -%}
    {%- assign advanced = site.guides | where: "difficulty", "advanced" -%}
    "by_difficulty": {
      "beginner": {{ beginner.size }},
      "intermediate": {{ intermediate.size }},
      "advanced": {{ advanced.size }}
    }
  },
  "endpoints": {
    "guides": {
      "url": "/api/guides.json",
      "description": "All guides with full metadata"
    },
    "series": {
      "url": "/api/series.json",
      "description": "Learning series and courses"
    },
    "topics": {
      "url": "/api/topics.json",
      "description": "Guides organized by topic tags"
    },
    "feed": {
      "url": "/feed.xml",
      "description": "RSS/Atom feed"
    },
    "sitemap": {
      "url": "/sitemap.xml",
      "description": "XML sitemap"
    },
    "ai_manifest": {
      "url": "/.well-known/ai-site.json",
      "description": "AI agent discovery manifest"
    }
  },
  "navigation": [
    {
      "label": "Home",
      "url": "/"
    },
    {
      "label": "All Guides",
      "url": "/guides/"
    },
    {
      "label": "API Documentation",
      "url": "/api/"
    }
  ]
}
